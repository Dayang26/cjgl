<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.snow.cjgl.dao.CourseMapper">
    <!--    二级缓存-->
    <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>


    <select id="getCourseAll" parameterType="map" resultType="Course" useCache="true">
        select * from abc.course
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="classHour != null">
                and classHour = #{classHour}
            </if>
        </where>
    </select>

    <insert id="addCourse" parameterType="map">
        INSERT INTO abc.course (name, class_hour)
        VALUES (#{name}, #{classHour})
    </insert>

    <update id="updateCourse" parameterType="map">
        update abc.course
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="classHour != null">
                class_hour = #{classHour}
            </if>
        </set>
        where id = #{id};
    </update>

    <delete id="deleteCourse" parameterType="map">
        DELETE
        FROM abc.course
        where id = #{id}
    </delete>


    <select id="getCourseById" parameterType="_int" resultType="Course">
        select *
        from abc.course
        where id = #{id}
    </select>

</mapper>
